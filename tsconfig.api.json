{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",       // Must be CommonJS, not ES2020, ESNext, NodeNext, etc.
    "moduleResolution": "node", // Use Node, not NodeNext
    "esModuleInterop": true,
    "outDir": "api-dist", // Change output directory to avoid mixing with frontend
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "src", "dist"]
}